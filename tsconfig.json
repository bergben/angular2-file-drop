{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "build",
    "moduleResolution": "node",
    "declaration": true,
    "stripInternal": true,
    "skipLibCheck": true,
    "paths": {
      "@angular/core": ["node_modules/@angular/core"],
      "fileapi": ["node_modules/fileapi"]
    }
  },
  "files": [
    "./src/index.ts",
    "./ambient.d.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}